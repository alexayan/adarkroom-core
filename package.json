{
    "version": "1.0.1",
    "license": "MPL-2.0",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src",
        "i18n"
    ],
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "start": "tsdx watch --format cjs,esm,umd",
        "build": "tsdx build --format cjs,esm,umd",
        "test": "tsdx test",
        "lint": "tsdx lint",
        "prepare": "tsdx build --format cjs,esm,umd",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "adarkroom-core",
    "author": "yan <yanhaibiao1991@gmail.com>",
    "module": "dist/adarkroom-core.esm.js",
    "size-limit": [
        {
            "path": "dist/adarkroom-core.cjs.production.min.js",
            "limit": "100 KB"
        },
        {
            "path": "dist/adarkroom-core.esm.js",
            "limit": "100 KB"
        }
    ],
    "repository": "git@github.com:alexayan/adarkroom-core.git",
    "devDependencies": {
        "@rollup/plugin-alias": "^3.1.8",
        "@rollup/plugin-replace": "^3.0.0",
        "@size-limit/preset-small-lib": "^7.0.3",
        "@types/lodash": "^4.14.177",
        "@types/node-polyglot": "^2.4.2",
        "@types/redux": "^3.6.0",
        "@types/redux-logger": "^3.0.9",
        "babel-plugin-transform-rename-import": "^2.3.0",
        "husky": "^7.0.4",
        "i18n-extract": "^0.6.7",
        "size-limit": "^7.0.3",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^3.9.10"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.6.2",
        "lodash": "^4.17.21",
        "lodash-es": "^4.17.21",
        "node-polyglot": "^2.4.2",
        "redux-logger": "^3.0.6"
    }
}
